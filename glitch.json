{
  "install": "npm install",
  "start": "node src/index.js",
  "watch": {
    "ignore": [
      "\\.git",
      "node_modules/**/node_modules"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "^src/",
        "^public/"
      ]
    }
  }
}